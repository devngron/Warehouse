<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<%= link_to "Back", warehouses_path %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', warehouse_product_path(@warehouse, product) %></td>
        <td><%= link_to 'Edit', edit_warehouse_product_path(@warehouse, product) %></td>
        <td><%= link_to 'Destroy', warehouse_product_path(@warehouse, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_warehouse_product_path %>
